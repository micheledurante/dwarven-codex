{
    "compilerOptions": {
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "deno.ns"
        ]
    },
    "fmt": {
        "files": {
            "exclude": [
                "web/json/",
                "dwarven_grammar_book.md"
            ]
        },
        "options": {
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": false
        }
    },
    "tasks": {
        "install": "deno fmt && deno run --allow-read --allow-write --allow-sys bin/install.ts"
    }
}
